<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="serverIntroController" alignment="CENTER" spacing="30">
    <padding>
        <Insets top="100" right="50" bottom="100" left="50"/>
    </padding>

    <Label text="Three Card Poker Server" styleClass="welcome-title"/>
    <Label text="Enter the port number to start the server:" styleClass="subtitle"/>

    <HBox spacing="20" alignment="CENTER">
        <Label text="Port:" styleClass="label"/>
        <TextField fx:id="portField" promptText="e.g. 5555" styleClass="text-field"/>
    </HBox>

    <Button fx:id="startButton" text="Start Server" onAction="#handleStartServer" styleClass="button"/>

</VBox>
